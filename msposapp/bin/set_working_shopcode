#!/bin/bash

#check for installed.
[ ! -f ../../.envtype ] && echo "Not installed." && exit 0

#Shopcode
echo -n "Shopcode: " && read SHOPCODE && echo "$SHOPCODE" >.shopcode

#OS Version
[ ! -f .$SHOPCODE.osversion ] && echo -n "OS Version - (rhel8, centos7, rocky9): " && read OSVERSION && echo "$OSVERSION" > .$SHOPCODE.osversion
